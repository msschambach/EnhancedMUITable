{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "build",
    "checkJs": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "build"]
}